echo "Hit ctrl + break in 5 seconds if you have not done: C:\>rhc git-clone gae!!!"

export LOCAL_CAPEDWAFT=~/Downloads/CapeDwarf_WildFly_2.0.0.Final
export CAPEDWAFT=~/gae

#sleep infinity
sleep 5 

### Local CapeDwarf Only ###
rm -rf $LOCAL_CAPEDWAFT/deployments/ROOT.war
cp ../.openshift/config/standalone.xml $LOCAL_CAPEDWAFT/standalone/configuration/
cp -R ../war $LOCAL_CAPEDWAFT/standalone/deployments/ROOT.war/
cp rcd $LOCAL_CAPEDWAFT/bin

#### OpenShift ###
rm -rf $CAPEDWAFT/deployments/ROOT.war
cp -R ../war $CAPEDWAFT/deployments/ROOT.war/
cp skip_maven_build $CAPEDWAFT/.openshift/markers
cp rhcp $CAPEDWAFT

#cd $CAPEDWAFT

echo "cd $LOCAL_CAPEDWAFT and capedwarf.sh or "
echo "cd $CAPEDWAFT and invoke rhcp now to push to OpenShift! :)"
