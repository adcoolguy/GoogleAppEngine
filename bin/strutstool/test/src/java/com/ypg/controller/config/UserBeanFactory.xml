<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <!-- generator:beans -->
    <bean id="userRepositoryHibernate" class="com.ypg.model.repository.UserRepositoryHibernate" />
    <bean id="userServiceImpl" class="com.ypg.model.service.UserServiceImpl" />

    <bean id="userPagingLookupManagerImpl" class="com.framework.util.pagination.manager.PagingLookupManagerImpl">
        <property name="repository" ref="userRepositoryHibernate" />
    </bean>
    
    <bean id="userController" class="com.ypg.controller.UserController" singleton="false">
        <property name="paginateListFactory" ref="paginateListFactory" />
        <property name="pagingManager" ref="userPagingLookupManagerImpl" />
        <property name="userService" ref="userServiceImpl" />
    </bean>
</beans>
