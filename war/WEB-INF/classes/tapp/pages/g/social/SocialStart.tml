<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html t:type="layoutwithsegments" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd" xmlns:sec="http://www.springframework.org/security/tags" xmlns:p="tapestry:parameter">
    <head>
        <title>Life (${total})</title>
        <style>
/** http://motyar.blogspot.com/2009/12/simplest-tooltip-with-pure-css.html# */
td.description {
    text-decoration:none;
}
td.description span, td.details span {
    display:none;
    padding:2px 3px;
    margin-left:0px;
}
td.description:hover span, td.details:hover span {
     display:inline;
     position:absolute;
     border:1px solid #FF00FF;
     background:#FFE4F6;
     color:#2BA94F;
     font-size:150%;
}
        </style>
    </head>
    <body>
        <t:alerts/>
    	<div>
	        <h2 style="display:inline">Life Manager (${total})</h2>
	        &nbsp;&nbsp;&nbsp;<span style="float:right;"><t:actionlink t:id="logout">Logout</t:actionlink></span>
			<form style="float:right;" action="/g/search_social.jsp">
				Search <input type="text" name="q" id="q" value="" style="font-size:12px;min-width:200px;margin:0 5px 0 2px;"/><img style="vertical-align:middle" src="http://icons.iconarchive.com/icons/oxygen-icons.org/oxygen/16/Actions-edit-find-icon.png" alt="Search"/>&nbsp;<a href='http://lucene.apache.org/java/2_9_1/queryparsersyntax.html'>?</a>
			</form>
    	</div>

		<p><t:pagelink t:page="g/social/SocialSave" context="0">Create Something</t:pagelink></p><br/>

				<table t:id="social1Grid" rowClass="literal:myRowClass" t:type="grid" pagerPosition="both" source="Socials" row="Social" add="delete" rowsPerPage="20" include="id,lastUpdatedDate,similarity,what,details,wordCount,frequencyCount" reorder="id,what,details,similarity">
					<t:parameter name="idCell">
						<t:pagelink page="g/social/SocialSave" context="Social.id">${Social.id}</t:pagelink>
					</t:parameter>
					<p:detailsCell>
						<span>${Social.details}</span>${detailsExcerpt}
					</p:detailsCell>
					<p:lastUpdatedDateCell>
						<t:output format="message:month_year" value="Social.lastUpdatedDate"/>
					</p:lastUpdatedDateCell>					
					<t:parameter name="deleteCell">
						<sec:ifAnyGranted roles="ROLE_ADMIN, ROLE_Social_ADMIN">
							<!-- source: http://tapestry.1045711.n5.nabble.com/Tapestry-Forum-td2404216.html -->
	             			<t:actionlink t:id="delete" t:mixins="confirm" context="Social.id">Delete</t:actionlink>
						</sec:ifAnyGranted>
         			</t:parameter>
				</table>
<p/><br/>
<form style="display:${runIndexDisplay};" t:type="form" t:id="compassForm">
	<input value="Run Index Now (Warning: Costly Operation!)" class="btsubmit" t:type="submit" t:id="runIndex"/>
</form>
    </body>

</html>